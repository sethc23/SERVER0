
MNT=$(echo "$1")

if [ $2 = "m" ]; then
	mount -t proc none $MNT/proc
	mount -t sysfs none $MNT/sys
	mount -t devpts none $MNT/dev/pts
	mount -o bind /dev $MNT/dev
	LANG= chroot $MNT /bin/bash
elif [ $2 = "u" ]; then
	cd /
	for i in $MNT/proc $MNT/sys $MNT/dev/pts $MNT/dev $MNT
	do
		umount $i
	done
fi


